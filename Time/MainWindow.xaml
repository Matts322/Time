<Window x:Class="Time.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:Time.UserControls"
        mc:Ignorable="d"
        Title="Time" Height="550" Width="1000" Background="#182357">
    <Grid>
        <TabControl Background="MediumPurple" Style="{StaticResource MaterialDesignFilledTabControl}">
            <TabItem Header="Time">
                <uc:TimeControl/>
            </TabItem>
            <TabItem Header="Currency">
                <uc:CurrencyControl/>
            </TabItem>
            <TabItem Header="Countdown">
                <uc:CountdownControl/>
            </TabItem>
            <TabItem Header="Stopwatch">
               <uc:StopWatchControl/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
